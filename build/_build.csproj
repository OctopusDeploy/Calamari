<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <RuntimeIdentifiers>win-x64;linux-x64</RuntimeIdentifiers>
        <RootNamespace>Calamari.Build</RootNamespace>
        <NoWarn>CS0649;CS0169</NoWarn>
        <NukeRootDirectory>..</NukeRootDirectory>
        <NukeScriptDirectory>..</NukeScriptDirectory>
        <NukeTelemetryVersion>1</NukeTelemetryVersion>
        <PublishDir>..\build\outputs\$(RuntimeIdentifier)\nukebuild</PublishDir>
        <Nullable>enable</Nullable>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <!-- Error CS0649 : Field '{0}}' is never assigned to, and will always have its default value null -->
        <!-- Error CS9057 : The analyzer assembly 'Nuke.SourceGenerators.dll' references version '4.7.0.0' of the compiler, which is newer than the currently running version '4.3.0.0'. - this can be removed when we upgrade to .net8 or later -->
        <NoWarn>CS0649;CS0169;CS9057</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <NukeExcludeDirectoryBuild>True</NukeExcludeDirectoryBuild>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="NuGet.CommandLine" Version="6.13.2">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Nuke.Common" Version="8.1.4">
            <!-- this version of nuke has a source generator that requires a newer compiler than is in net6 -->
            <!-- remove this when we upgrade to net8 or later -->
            <ExcludeAssets>analyzers</ExcludeAssets>
        </PackageReference>
        <PackageReference Include="Octopus.OctoVersion.Tool" Version="1.0.9" ExcludeAssets="all" />
        <PackageReference Include="AzureSignTool" Version="6.0.1" ExcludeAssets="all" />
    </ItemGroup>
    <ItemGroup>
      <ProjectReference Include="..\source\Calamari.ConsolidateCalamariPackages\Calamari.ConsolidateCalamariPackages.csproj" />
    </ItemGroup>

</Project>
