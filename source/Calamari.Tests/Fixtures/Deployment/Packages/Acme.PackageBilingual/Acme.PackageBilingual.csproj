<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>A sample project containing PowerShell and Bash packaged scripts</Description>
    <NeutralLanguage>en-US</NeutralLanguage>
    <VersionPrefix>1.0.0.0</VersionPrefix>
    <Authors>ACME Corporation</Authors>
    <TargetFramework>netstandard1.0</TargetFramework>
    <AssemblyName>Acme.PackageBilingual</AssemblyName>
    <PackageId>Acme.PackageBilingual</PackageId>
    <PackageProjectUrl>https://github.com/OctopusDeploy/Calamari/</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/OctopusDeploy/Calamari/blob/master/LICENSE.txt</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Update="**\*.*">
      <Pack>true</Pack>
    </None>
    <None Update="*.csproj;*.nuspec">
      <Pack>false</Pack>
    </None>
  </ItemGroup>

</Project>
